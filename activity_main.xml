<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the day" />

    <EditText
        android:id="@+id/edittextday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Day"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:text="Please enter the month"
        android:layout_marginTop="68dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/edittextday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edittextmonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="13 is January, 14 is February, etc"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the year"
        android:layout_below="@+id/edittextmonth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <EditText
        android:id="@+id/edittextyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_contentp_content"
        android:inputType="number"
        android:hint="Four digits"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tap me"
    android:onClick="onClickCompute"
    android:id="@+id/button"/>

    <TextView
        android:id="@+id/textviewoutput"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="83dp" />

</LinearLayout>
